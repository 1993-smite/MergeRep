@using ViewTestProject.Controllers;
@model List<Point>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "SVG/Index";

    var filter = (Filter)ViewData[SVGController.filterKey];
    var building = filter.Building;
    var level = filter.Level;
}

<environment include="Development">
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
</environment>

<h2>SVG interactive image</h2>
<div class="row">
    <div class="col-md-2">
        <select id="building" class="update-svg" data-path="/images">
            <option value="AK-2">AK-2</option>
        </select> 
        <select id="level" class="update-svg">
            <option value="1">1</option>
            <option value="2">2</option>
        </select>
    </div>
    <div class="col-md-2">
       
    </div>
</div>
<div class="row">
    <div class="col-md-7">
        <object data="~/images/@building/@level/plan.svg" type="image/svg+xml" id="svgmap" width="500" height="420"></object>
    </div>
    <div id="tbl-points" class="col-md-5" style="max-height: 500px;overflow-y: auto;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var itm in Model)
                {
                    <tr class="row-@itm.Id pointer" data-id ="@itm.Id">
                        <th scope="row">@itm.Id</th>
                        <td>@itm.Name</td>
                        <td>@itm.Title</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    @*<script src="~/js/jquery-ui.js"></script>*@
    <script src="~/js/popper.min.js"></script>
    <script type="text/javascript">
        let model = JSON.parse('@Html.Raw(Json.Serialize(Model))');
        let filter = JSON.parse('@Html.Raw(Json.Serialize(filter))');
    </script>

    @*<script src="https://d3js.org/d3.v5.min.js"></script>*@
    <script src="~/js/Pages/page.svg.index.js"></script>
}
